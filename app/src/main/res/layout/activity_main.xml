<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_factory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Factory"/>
        <LinearLayout
            android:id="@+id/factory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txt_factory">
            <Button
                android:id="@+id/teste1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"/>
            <Button
                android:id="@+id/teste2"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVER"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_builder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/factory"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Builder"/>
        <LinearLayout
            android:id="@+id/builder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_builder">

            <Button
                android:id="@+id/teste3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELL" />

            <Button
                android:id="@+id/teste4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="ASUS" />
            <Button
                android:id="@+id/teste5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="ACER" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/builder"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Behavior"/>
        <LinearLayout
            android:id="@+id/obserble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_behavior" >
            <Button
                android:id="@+id/teste6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RISEN"/>
            <Button
                android:id="@+id/teste7"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FELL"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/obserble"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Strategy"/>
        <LinearLayout
            android:id="@+id/strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_strategy" >
            <Button
                android:id="@+id/teste8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brea"/>
            <Button
                android:id="@+id/teste9"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
            <Button
                android:id="@+id/teste10"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/strategy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/strategy" >
            <Button
                android:id="@+id/teste11"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"/>
            <Button
                android:id="@+id/teste12"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_chain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/strategy2"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Chain Responsibility"/>
        <LinearLayout
            android:id="@+id/chain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_chain" >
            <Button
                android:id="@+id/teste13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"/>

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="numeros"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/chain"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="State"/>
        <LinearLayout
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_state" >
            <Button
                android:id="@+id/teste14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooling"/>
            <Button
                android:id="@+id/teste15"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heating"/>
            <Button
                android:id="@+id/teste16"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_decorate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/state"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Decorat"/>
        <LinearLayout
            android:id="@+id/decorat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_decorate" >
            <Button
                android:id="@+id/teste17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line"/>
            <Button
                android:id="@+id/teste18"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dotte Line"/>
            <Button
                android:id="@+id/teste19"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Star"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/decorat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>